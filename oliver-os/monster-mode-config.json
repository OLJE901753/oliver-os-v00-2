      "backend": {
        "enabled": true,
        "priority": "high",
        "maxConcurrentTasks": 8,
        "capabilities": [
          "api-development",
          "database-management",
          "authentication",
          "authorization",
          "business-logic",
          "testing"
        ],
        "dependencies": ["database", "ai-services"],
        "communication": "http",
        "monitoring": true,
        "scaling": true
      },
      "ai-services": {
        "enabled": true,
        "priority": "high",
        "maxConcurrentTasks": 6,
        "capabilities": [
          "nlp-processing",
          "ml-modeling",
          "data-analysis",
          "prediction",
          "optimization",
          "testing"
        ],
        "dependencies": ["database"],
