        "linting": "smart-suggestions",
        "formatting": "preview-and-approve",
        "typeChecking": "suggestions-only",
        "testing": "smart-suggestions"
      },
      "safety": {
        "requireApproval": true,
        "previewChanges": true,
        "backupBeforeChanges": true,
        "easyRollback": true
      },
      "intelligence": {
        "contextAware": true,
        "patternRecognition": true,
        "smartSuggestions": true,
        "learningMode": true
      }
