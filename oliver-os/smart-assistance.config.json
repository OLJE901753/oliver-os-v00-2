      "alwaysShowPreview": true,
      "backupBeforeChanges": true,
      "easyRollback": true
    },
    "tools": {
      "eslint": {
        "smartMode": true,
        "suggestionsOnly": true,
        "requireApproval": true,
        "confidenceThreshold": 80
      },
      "prettier": {
        "smartFormatting": true,
        "previewChanges": true,
